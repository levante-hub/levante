    {
      "id": "filesystem-local",
      "name": "Local File System",
      "description": "Read and write local files and directories",
      "category": "system",
      "icon": "folder",
      "transport": {
        "type": "stdio",
        "autoDetect": false
      },
      "configuration": {
        "fields": [
          {
            "key": "command",
            "label": "MCP Server Command",
            "type": "text",
            "required": true,
            "description": "Path to the MCP server executable",
            "placeholder": "npx @modelcontextprotocol/server-filesystem",
            "defaultValue": "npx @modelcontextprotocol/server-filesystem"
          },
          {
            "key": "rootPath",
            "label": "Root Directory",
            "type": "text",
            "required": true,
            "description": "Base directory for file operations",
            "placeholder": "/Users/yourusername/Documents"
          },
          {
            "key": "readOnly",
            "label": "Read Only Mode",
            "type": "select",
            "required": true,
            "options": ["true", "false"],
            "description": "Restrict to read-only operations",
            "defaultValue": "true"
          }
        ],
        "defaults": {
          "command": "npx @modelcontextprotocol/server-filesystem",
          "readOnly": "true"
        }
      }
    },

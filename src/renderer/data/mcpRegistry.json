        }
      }
    },
    {
      "id": "sqlite",
      "name": "SQLite Database",
      "description": "Query and manage SQLite databases",
      "category": "database",
      "icon": "database",
      "transport": {
        "type": "stdio",
        "autoDetect": false
      },
      "configuration": {
        "fields": [
          {
            "key": "command",
            "label": "MCP Server Command",
            "type": "text",
            "required": true,
            "description": "Path to the MCP server executable",
            "placeholder": "npx @modelcontextprotocol/server-sqlite"
          },
          {
            "key": "dbPath",
            "label": "Database Path",
            "type": "text",
            "required": true,
            "description": "Path to the SQLite database file",
            "placeholder": "/path/to/your/database.db"
          }
        ],
        "defaults": {
          "command": "npx @modelcontextprotocol/server-sqlite"
        }
      }
    }
  ]
}